<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "bridgetown_theme_single_page_opt_in/head", metadata: site.metadata, title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }}">
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none !important">
      <filter id="grayscale">
        <feColorMatrix type="matrix" values="0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0"></feColorMatrix>
      </filter>
    </svg>
    
    {{content}}

    {% # render "bridgetown_theme_single_page_opt_in/signup_form" %}
    {% # render "bridgetown_theme_single_page_opt_in/loading_text" %}
    <div class="timer-expiration" style="display: none;">
      {{ site.data.event_details.date }}
    </div>

    {% render "bridgetown_theme_single_page_opt_in/footer", metadata: site.metadata, data: site.data.footer %}
  </body>
</html>
